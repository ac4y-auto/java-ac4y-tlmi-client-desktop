<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >


                <TextView
                    android:id="@+id/internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/office_set_flaticon"
                    android:padding="3dp"
                    android:text="@string/icon_font_internet"
                    android:textColor="@color/indicator_color_default"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/logistics_delivery_flaticon"
                    android:padding="3dp"
                    android:text="@string/icon_font_login"
                    android:textColor="@color/indicator_color_default"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/websocket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/office_set_flaticon"
                    android:padding="3dp"
                    android:text="@string/icon_font_websocket"
                    android:textColor="@color/indicator_color_default"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/recognition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bullhorn_and_mics_fill_flaticon"
                    android:padding="3dp"
                    android:text="@string/icon_font_recognition"
                    android:textColor="@color/indicator_color_default"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/synthesizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bullhorn_and_mics_fill_flaticon"
                    android:padding="3dp"
                    android:text="@string/icon_font_speech"
                    android:textColor="@color/indicator_color_default"
                    android:textSize="24sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/selfAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"

                    />

                <TextView
                    android:id="@+id/selfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"

                    />

                <ImageView
                    android:id="@+id/connection"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/disconnected"

                    />

                <TextView
                    android:id="@+id/partnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"

                    />

                <ImageView
                    android:id="@+id/partnerAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >




                <ListView
                    android:id="@+id/partnerList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

                <ListView
                    android:id="@+id/chatHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

                <ListView
                    android:id="@+id/log"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

                <ListView

                    android:id="@+id/keyValueListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>


            </LinearLayout>


        </LinearLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />

    </android.support.constraint.ConstraintLayout>